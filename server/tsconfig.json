{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2024",
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "../shared/**/*.ts"]
}
