{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2024",
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "shared/*": ["shared/*"],
      "native/*": ["server/native/*"]
    }
  },
  "include": ["./**/*.ts", "../shared/**/*.ts"]
}
