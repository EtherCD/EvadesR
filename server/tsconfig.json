{
	"compilerOptions": {
		"target": "es2024",
		"experimentalDecorators": true,
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@network": ["./src/network"],
			"@core": ["./src/core"],
			"@services": ["./src/services"],
			"@shared": ["./src/shared"]
		}
	}
}
